LIB = libmbd.a
OBJS := $objs
ifeq ($$(LIBMBD_C_API),0)
OBJS := $$(filter-out mbd_c_api.o,$$(OBJS))
endif

$$(LIB): $$(OBJS)
	ar -r $$@ $$^

%.o: %.f90
	$$(FXX) $$(FXXOPT) -c $$<

%.o: %.F90
	$$(FXX) $$(FXXOPT) $macros -c $$<

$deps

.PHONY: clean distclean
clean:
	rm -f *.o

distclean: clean
	rm -f *.mod
	rm -f $$(LIB)
